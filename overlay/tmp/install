#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Get PHP version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bcg-debug "PHP version ${VERSION}."


#======================================================================================================================
# Install PHP dependencies and packages.
#======================================================================================================================

bcg-echo "Installing dependencies..."
apk add --no-cache \
    bash
bcg-done

bcg-echo "Installing PHP v${VERSION}..."
chmod +x ./install-php && ./install-php ${VERSION}
bcg-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bcg-debug "Cleanup /www files."
rm -f /www/index.html
