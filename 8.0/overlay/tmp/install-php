#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP8.
#======================================================================================================================

apk add --no-cache \
    php8=${1} \
    php8-common=${1} \
    php8-fpm=${1} \
    php8-session=${1}


#======================================================================================================================
# Create symlinks so PHP can be called on the commandline using php and php-fpm.
#======================================================================================================================

ln -s /usr/bin/php8 /usr/bin/php
ln -s /usr/sbin/php-fpm8 /usr/sbin/php-fpm
