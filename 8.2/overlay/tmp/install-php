#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP 8.2.
#======================================================================================================================

apk add --no-cache \
    php82=${1} \
    php82-common=${1} \
    php82-fpm=${1} \
    php82-session=${1}


#======================================================================================================================
# Create symlinks so PHP can be called on the commandline using php and php-fpm.
#======================================================================================================================

[[ ! -e /usr/bin/php ]] && ln -s /usr/bin/php82 /usr/bin/php
[[ ! -e /usr/sbin/php-fpm ]] && ln -s /usr/sbin/php-fpm82 /usr/sbin/php-fpm
