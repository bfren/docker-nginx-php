#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP8.
#======================================================================================================================

apk add --no-cache \
    php81=${1} \
    php81-common=${1} \
    php81-fpm=${1} \
    php81-session=${1}


#======================================================================================================================
# Create symlinks so PHP can be called on the commandline using php and php-fpm.
#======================================================================================================================

ln -s /usr/bin/php81 /usr/bin/php
ln -s /usr/sbin/php-fpm81 /usr/sbin/php-fpm
