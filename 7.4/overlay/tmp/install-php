#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP7.
#======================================================================================================================

apk add --no-cache \
    php7@edgetest=${1} \
    php7-common@edgetest=${1} \
    php7-fpm@edgetest=${1} \
    php7-session@edgetest=${1}


#======================================================================================================================
# Create symlink so PHP can be called on the commandline using php and php-fpm.
#======================================================================================================================

ln -s /usr/bin/php7 /usr/bin/php
ln -s /usr/sbin/php-fpm7 /usr/sbin/php-fpm
