#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP7.
#======================================================================================================================

apk add --no-cache \
    php7=${1} \
    php7-common=${1} \
    php7-fpm=${1} \
    php7-session=${1}


#======================================================================================================================
# Create symlink so PHP can be called on the commandline using php and php-fpm.
#======================================================================================================================

[[ ! -e /usr/bin/php ]] && ln -s /usr/bin/php7 /usr/bin/php
[[ ! -e /usr/sbin/php-fpm ]] && ln -s /usr/sbin/php-fpm7 /usr/sbin/php-fpm
