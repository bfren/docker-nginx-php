#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP8 and create symlink.
#======================================================================================================================

apk add --no-cache \
    php7=${1} \
    php7-common=${1} \
    php7-fpm=${1} \
    php7-session=${1}


#======================================================================================================================
# Create symlinks so PHP can be called on the commandline using php and php-fpm.
#======================================================================================================================

ln -s /usr/bin/php7 /usr/bin/php
ln -s /usr/sbin/php-fpm7 /usr/sbin/php-fpm
