#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP7.
#======================================================================================================================

apk add --no-cache \
    php7@prevcomm=${1} \
    php7-common@prevcomm=${1} \
    php7-fpm@prevcomm=${1} \
    php7-session@prevcomm=${1}


#======================================================================================================================
# Create symlink so PHP can be called on the commandline using php-fpm.
#======================================================================================================================

[[ ! -e /usr/bin/php ]] && ln -s /usr/bin/php7 /usr/bin/php
[[ ! -e /usr/sbin/php-fpm ]] && ln -s /usr/sbin/php-fpm7 /usr/sbin/php-fpm
