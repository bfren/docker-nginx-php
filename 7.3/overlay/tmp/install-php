#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP8 and create symlink.
#======================================================================================================================

apk add --no-cache \
    php7=${1} \
    php7-common=${1} \
    php7-fpm=${1} \
    php7-session=${1}


#======================================================================================================================
# Add PHP config directory environment variable.
#======================================================================================================================

bcg-env "PHP_DIR" "/etc/php7"
